# Variables de entorno para desarrollo local
# Copia este archivo como .env.local y completa con tus valores reales

DB_HOST=tu_host_de_base_de_datos
DB_USER=tu_usuario_de_db
DB_PASSWORD=tu_password_de_db
DB_DATABASE=tu_nombre_de_base_de_datos
MP_ACCESS_TOKEN=tu_token_de_mercado_pago
CLIENT_ID=tu_google_client_id
CLIENT_SECRET=tu_google_client_secret
REDIRECT_URI=http://localhost:3002/api/v1/auth/google/callback
GRANT_TYPE="authorization_code"
JWT_SECRET=tu_jwt_secret_muy_seguro
PORT=3002
NODE_ENV=development

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=tu_aws_access_key_id
AWS_SECRET_ACCESS_KEY=tu_aws_secret_access_key
AWS_SESSION_TOKEN=tu_aws_session_token_opcional
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=tu_bucket_name
